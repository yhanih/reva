modules = ["nodejs-20", "web"]
[agent]
expertMode = true
integrations = ["javascript_supabase:1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["samba4Full", "nettools", "nix-output-monitor", "tree", "nano"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Dashboard"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Mobile-App-Expo-Server-8080"

[[workflows.workflow]]
name = "Server"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd reva-app && npm run dev -- --port 5000 --host 0.0.0.0"
waitForPort = 5000

[[workflows.workflow]]
name = "Dashboard"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd reva-app/dashboard && NODE_OPTIONS=\"--max-old-space-size=2048\" PORT=8008 npm start"
waitForPort = 8008

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow]]
name = "Mobile-App-Expo-Server-8080"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd reva-mobile && npx expo start --tunnel --port 8080"
waitForPort = 8080

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 8008

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8008
externalPort = 8008

[[ports]]
localPort = 8080
externalPort = 8080
